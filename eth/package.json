{
  "name": "@terra-money/shuttle-eth",
  "version": "1.0.0",
  "description": "Ether side shuttle implementation to relay tx on the Terra Blockchain",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc --module commonjs && webpack --mode production",
    "test": "jest",
    "prettier": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "doc": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terra-project/shuttle.git"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always"
  },
  "author": "YunYeo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terra-project/mirror-airdrop/issues"
  },
  "homepage": "https://github.com/terra-project/mirror-airdrop#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/redis": "^2.8.28",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.46",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "webpack": "^4",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@terra-money/terra.js": "^1.0.2",
    "axios": "^0.21.0",
    "bech32": "^1.1.4",
    "redis": "^3.0.2",
    "web3": "^1.3.0",
    "web3-eth-contract": "^1.3.0",
    "web3-utils": "^1.3.0"
  }
